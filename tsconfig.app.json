{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist-app",
    "paths": {
      "@lib/*": ["./src/*"]
    }
  },
  "include": ["app", "src"],
  "exclude": ["node_modules", "dist", "dist-app"]
}
